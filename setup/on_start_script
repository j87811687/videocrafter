#.tmp, valid fallback setup file, create ~/.bashrc if missing
#env >> /etc/environment
echo "⚠️ Skipping env dump to /etc/environment to avoid persisting secrets."
mkdir -p "${DATA_DIRECTORY:-/workspace}"

#!/bin/bash
set -e

# -------------------- Logging --------------------
LOG_DIR="/root/logs"
mkdir -p "$LOG_DIR"
LOG_FILE="$LOG_DIR/onstart_$(date +%s).log"
exec > >(tee -a "$LOG_FILE" || true) 2>&1

echo "=== On-Start Script: Downloading setup script and whitelist ==="


# -------------------- Download whitelist with 3-try loop --------------------
WHITELIST_URL="https://raw.githubusercontent.com/j87811687/videocrafter/refs/heads/main/setup/inference_whitelist.txt"
WHITELIST_PATH="/root/inference_whitelist.txt"

echo "=== Downloading whitelist file (up to 3 attempts) ==="

wh_ok=0
for attempt in 1 2 3; do
	echo "Whitelist download attempt $attempt..."
	if curl -fsSL "$WHITELIST_URL" -o "$WHITELIST_PATH.tmp"; then
		# Successful download → replace previous file
		mv -f "$WHITELIST_PATH.tmp" "$WHITELIST_PATH"
		echo "Whitelist download succeeded."
		wh_ok=1
		break
	else
		echo "Whitelist download failed."

		# Remove partial file from this failed attempt
		rm -f "$WHITELIST_PATH.tmp" 2>/dev/null || true

		sleep 2
	fi
done

# After 3 attempts → If no new download but an old valid file exists, fallback is used automatically.
if [ $wh_ok -ne 1 ]; then
	if [ -f "$WHITELIST_PATH" ]; then
		echo "⚠️ All download attempts failed — using previously downloaded whitelist."
	else
		echo "⚠️ All download attempts failed and no whitelist file exists — continuing without whitelist."
	fi
fi

# -------------------- Download setup script with 3-try loop --------------------
RAW_URL="<RAW_GITHUB_URL>"
DEST="/root/setup_videocrafter.sh"

echo "=== Downloading setup script (up to 3 attempts) ==="

setup_ok=0
for attempt in 1 2 3; do
	echo "Setup download attempt $attempt..."
	if curl -fsSL "$RAW_URL" -o "$DEST.tmp"; then
		# Successful download → replace previous file
		mv -f "$DEST.tmp" "$DEST"
		echo "Setup script download succeeded."
		setup_ok=1
		break
	else
		echo "Setup script download failed."

		# Remove partial file created by this failed attempt
		rm -f "$DEST.tmp" 2>/dev/null || true

		sleep 2
	fi
done

# After 3 failures: check if local file exists
if [ $setup_ok -ne 1 ]; then
	if [ -f "$DEST" ] && head -c 1 "$DEST" >/dev/null 2>&1; then
		echo "⚠️ Setup download failed 3 times, but local file exists - proceeding with execution."
	else
		echo "❌ Setup script download failed 3 times, and no local valid file exists."
		echo "❌ Cannot continue. Exiting."
		exit 1
	fi
fi

chmod +x "$DEST" 2>/dev/null || echo "⚠️ Could not set executable bit on setup script — continuing."

echo "=== Running setup script ==="

# -------------------- Execute your script --------------------
bash "$DEST"
touch ~/.bashrc
grep -qxF "conda activate videocrafter" ~/.bashrc || echo "conda activate videocrafter" >> ~/.bashrc 

echo "=== On-Start Script Finished Successfully ==="
